<AnchorPane prefHeight="400.0" prefWidth="350.0" style="-fx-background-color: #87CEEB;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.ClientController">
    <children>
        <Button fx:id="appointmentButton" layoutX="74.0" layoutY="181.0" mnemonicParsing="false" prefHeight="37.0" prefWidth="202.0" text="Make an appointment">
            <font>
                <Font name="Agency FB Bold" size="20.0" />
            </font>
        </Button>
        <Button fx:id="lookAtAppointmentButton" layoutX="74.0" layoutY="228.0" mnemonicParsing="false" prefHeight="37.0" prefWidth="202.0" text="View appointments">
            <font>
                <Font name="Agency FB Bold" size="20.0" />
            </font>
        </Button>
        <Button fx:id="closeButton" layoutX="14.0" layoutY="356.0" mnemonicParsing="false" prefHeight="29.0" prefWidth="51.0" text="close">
            <font>
                <Font name="Agency FB Bold" size="15.0" />
            </font>
        </Button>
        <Button fx:id="pricesButton" layoutX="74.0" layoutY="135.0" mnemonicParsing="false" prefHeight="37.0" prefWidth="202.0" text="Prices">
            <font>
                <Font name="Agency FB Bold" size="20.0" />
            </font>
        </Button>
        <Label fx:id="titleOfWindow" layoutX="14.0" layoutY="6.0" text="Good to see you in our place">
