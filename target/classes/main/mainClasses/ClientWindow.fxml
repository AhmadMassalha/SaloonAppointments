            <LinearGradient endX="1.0" endY="1.0">
               <stops>
                  <Stop>
                     <color>
                        <Color red="0.6666666865348816" />
                     </color>
                  </Stop>
                  <Stop offset="1.0">
                     <color>
                        <Color red="0.04288499057292938" green="0.015594542026519775" blue="0.5614035129547119" />
                     </color>
                  </Stop>
               </stops>
            </LinearGradient>
         </textFill>
        </Label>
      <ListView fx:id="listView" layoutX="56.0" layoutY="91.0" prefHeight="218.0" prefWidth="237.0" visible="false" />
      <Button fx:id="exitListButton" layoutX="56.0" layoutY="68.0" mnemonicParsing="false" prefHeight="13.0" prefWidth="61.0" text="X" underline="true" visible="false">
         <font>
            <Font name="Agency FB" size="10.0" />
         </font>
      </Button>
      <Label fx:id="deleteText" layoutX="12.0" layoutY="309.0" prefHeight="29.0" prefWidth="325.0" text="To remove an appointment, select it then press Delete" visible="false">
