                <Font name="Agency FB" size="15.0" />
            </font>
         <toggleGroup>
            <ToggleGroup fx:id="gender" />
         </toggleGroup>
        </RadioButton>
        <RadioButton fx:id="femaleButton" layoutX="191.0" layoutY="166.0" mnemonicParsing="false" text="Female" toggleGroup="$gender">
